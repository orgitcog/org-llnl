{
  "name": "session-recorder-desktop",
  "version": "1.0.0",
  "description": "Desktop application for recording browser sessions with voice narration",
  "main": "dist/main/index.js",
  "author": "Session Recorder",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "build": "tsc && npm run copy-renderer",
    "copy-renderer": "node -e \"const fs=require('fs');const p=require('path');const src='src/renderer';const dst='dist/renderer';fs.mkdirSync(dst,{recursive:true});['index.html','styles.css'].forEach(f=>fs.copyFileSync(p.join(src,f),p.join(dst,f)))\"",
    "clean": "rimraf dist",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:all": "npm run build && electron-builder --win --mac --linux",
    "electron:build:no-voice": "npm run build && electron-builder -c.extraResources=",
    "electron:build:linux:no-voice": "npm run build && electron-builder --linux -c.extraResources=",
    "electron:build:win:no-voice": "npm run build && electron-builder --win -c.extraResources=",
    "electron:build:mac:no-voice": "npm run build && electron-builder --mac -c.extraResources="
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "playwright": "^1.40.0",
    "session-recorder": "file:.."
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^20.10.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.sessionrecorder.desktop",
    "productName": "Session Recorder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,cber}",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/node_modules/session-recorder/src/voice/**/*",
      "!**/node_modules/session-recorder/output/**/*",
      "!**/node_modules/session-recorder/test/**/*",
      "!**/node_modules/session-recorder/viewer/**/*",
      "!**/node_modules/session-recorder/mcp-server/**/*",
      "!**/node_modules/session-recorder/desktop-app/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/${os}/voice-recorder",
        "to": "voice-recorder",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Session Recorder"
    }
  }
}
