#ifndef SRC_TRIBOL_CONFIG_HPP_
#define SRC_TRIBOL_CONFIG_HPP_

/*
 * Note: Use only C-style comments in this file since it might be included from a C file
 */

/*
 * Version Information
 */
/* clang-format off */
#define TRIBOL_VERSION_MAJOR @TRIBOL_VERSION_MAJOR@
#define TRIBOL_VERSION_MINOR @TRIBOL_VERSION_MINOR@
#define TRIBOL_VERSION_PATCH @TRIBOL_VERSION_PATCH@
/* clang-format on */
#define TRIBOL_VERSION_FULL "@TRIBOL_VERSION_FULL@"

/*
 * Directories
 */
#define TRIBOL_REPO_DIR "@TRIBOL_REPO_DIR@"
#define TRIBOL_BIN_DIR "@TRIBOL_BIN_DIR@"
#define TRIBOL_DATA_DIR "@TRIBOL_DATA_DIR@"

/*
 * Build information
 */
#cmakedefine TRIBOL_USE_SINGLE_PRECISION
#cmakedefine TRIBOL_USE_MPI
#cmakedefine TRIBOL_USE_UMPIRE
#cmakedefine TRIBOL_USE_RAJA
#cmakedefine TRIBOL_USE_ENZYME
#cmakedefine TRIBOL_USE_CUDA
#cmakedefine TRIBOL_USE_HIP
#cmakedefine TRIBOL_USE_OPENMP
#cmakedefine BUILD_REDECOMP

#endif /* SRC_TRIBOL_CONFIG_HPP_ */
