import numpy as np


def generate_patterned_matrix(n):
    """
    Generates an n x n square matrix with a consistent pattern,
    designed to be well-conditioned.

    The matrix will have:
    - Main diagonal elements 'n' or '2n' (large values for diagonal dominance)
    - Off-diagonal elements '1' or '-1'
    - A structured pattern to avoid pure randomness.

    Args:
        n (int): The size of the square matrix (n x n).

    Returns:
        numpy.ndarray: The generated n x n matrix.
    """
    if n <= 0:
        raise ValueError("Matrix size n must be a positive integer.")

    A = np.zeros((n, n))

    for i in range(n):
        for j in range(n):
            if i == j:
                # Strong diagonal dominance for good conditioning
                A[i, j] = 2 * n if n > 1 else 1 # Ensure value even for n=1
            else:
                # Patterned off-diagonal elements
                if (i + j) % 2 == 0:
                    A[i, j] = 1
                else:
                    A[i, j] = -1
                # Slightly increase diagonal to maintain dominance if many off-diagonals are '1'
                if abs(A[i,j]) == 1:
                    A[i,i] += 0.1 # Small increment to main diagonal for robustness

    return A

# --- Example Usage ---
if __name__ == "__main__":
    sizes = [3, 5, 10, 20] # Different matrix sizes to generate

    for n in sizes:
        matrix = generate_patterned_matrix(n)
        print(f"Matrix of size {n}x{n}:\n{matrix}")

        # You can optionally check the condition number.
        # For well-conditioned matrices, it should not be excessively large.
        try:
            condition_number = np.linalg.cond(matrix)
            print(f"Condition number for {n}x{n} matrix: {condition_number:.2f}\n")
            if condition_number > 1000: # A common threshold for "ill-conditioned"
                 print(f"Warning: The {n}x{n} matrix might be somewhat ill-conditioned (cond > 1000).\n")

        except np.linalg.LinAlgError as e:
            print(f"Could not calculate condition number for {n}x{n} matrix: {e}\n")

        print("-" * 30)

    # Example of a 1x1 matrix
    matrix_1x1 = generate_patterned_matrix(1)
    print(f"Matrix of size 1x1:\n{matrix_1x1}")
    condition_number_1x1 = np.linalg.cond(matrix_1x1)
    print(f"Condition number for 1x1 matrix: {condition_number_1x1:.2f}\n")
    print("-" * 30)

    # Example of how to use it in a linear system Ax = b
    n_example = 4
    A_example = generate_patterned_matrix(n_example)
    print(f"Example A matrix ({n_example}x{n_example}):\n{A_example}")

    # Create a random 'b' vector
    b_example = np.random.rand(n_example)
    print(f"\nExample b vector:\n{b_example}")

    # Solve the linear system Ax = b
    try:
        x_example = np.linalg.solve(A_example, b_example)
        print(f"\nSolution x:\n{x_example}")
        # Verify the solution
        print(f"\nCheck A @ x - b (should be close to zero):\n{A_example @ x_example - b_example}")
    except np.linalg.LinAlgError as e:
        print(f"\nCould not solve the linear system: {e}")



